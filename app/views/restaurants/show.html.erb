<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<h2>
  <%= @restaurant.name %>
</h2>

<p>Category: <%= @restaurant.category %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Address: <%= @restaurant.address %></p>

<ul>
<% @restaurant.reviews.each do |review| %>
  <li><%= review.content %>, rating: <%= review.rating %></li>
<% end %>
</ul>

<div>
<%= link_to new_restaurant_review_path(@restaurant), remote:true do %>
<button type="button" class="btn btn-primary">Post a review</button>
<% end %>
</div>
<div>
<%= link_to restaurants_path, remote:true do %>
<button type="button" class="btn btn-primary">Back</button>
<% end %>
</div>
